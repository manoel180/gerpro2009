  <mapping resource="br/com/gerpro/model/ListaFuncao.hbm.xml"/>
  <mapping resource="br/com/gerpro/model/Equipe.hbm.xml"/>
  <mapping resource="br/com/gerpro/model/Item.hbm.xml"/>
  <mapping resource="br/com/gerpro/model/Correcao.hbm.xml"/>
